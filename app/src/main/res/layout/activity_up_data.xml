<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oliver.com.competitiontt.UpDataActivity">



    <TextView
        android:id="@+id/tv_name"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="比賽名稱"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp" />


    <TextView
        android:id="@+id/tv_host"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="主辦單位"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="比賽日期"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_host"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_over"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="報名截止"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_set"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="組別"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_over"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_plane"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="地點"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_set"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_website"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="網址"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_plane"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_host"
        android:layout_marginLeft="6dp" />

    <EditText
        android:id="@+id/et_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:text=""
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/et_host"
        app:layout_constraintLeft_toRightOf="@+id/tv_date"
        android:layout_marginLeft="6dp" />

    <EditText
        android:id="@+id/et_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:text=""
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/et_date"
        app:layout_constraintLeft_toRightOf="@+id/tv_over"
        android:layout_marginLeft="6dp" />

    <EditText
        android:id="@+id/et_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/et_over"
        app:layout_constraintLeft_toRightOf="@+id/tv_set"
        android:layout_marginLeft="6dp" />

    <EditText
        android:id="@+id/et_plane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/et_set"
        app:layout_constraintLeft_toRightOf="@+id/tv_plane"
        android:layout_marginLeft="6dp" />

    <EditText
        android:id="@+id/et_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textWebEditText"
        android:text=""
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/et_plane"
        app:layout_constraintLeft_toRightOf="@+id/tv_website"
        android:layout_marginLeft="6dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="237dp"
        android:layout_marginTop="28dp"
        android:text="刊   登"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_website" />


</android.support.constraint.ConstraintLayout>
