<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oliver.com.competitiontt.MainActivity">

    <Button
        android:id="@+id/search"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="onClickSearch"
        android:text="賽事查詢"
        android:textSize="22sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp" />

    <Button
        android:id="@+id/talk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="56dp"
        android:onClick="onClick"
        android:text="匿名聊天"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/search"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updata"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="立即刊登"
        android:textSize="22sp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/search"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/reg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:onClick="onClick"
        android:text="註冊帳號"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/updata"
        app:layout_constraintTop_toBottomOf="@+id/talk" />


    <Button
        android:id="@+id/login"
        android:layout_width="306dp"
        android:layout_height="61dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="65dp"
        android:onClick="onClick"
        android:text="立 即 登 入"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updata" />

</android.support.constraint.ConstraintLayout>
